---
import "../styles/global.css";

interface Props {
	title: string;
	description?: string;
	image?: string;
}

const {
	title,
	description = "Gabriel's library of thoughts, projects, and travel essays.",
	image = "/GabrielPhoto.jpg",
} = Astro.props;

// Get theme server-side if possible (for SSR)
const theme = "light"; // Default for SSR
---

<!doctype html>
<html lang="en" data-theme={theme}>
	<head>
		<script is:inline>
			// ATOMIC THEME INITIALIZER - CRITICAL MUST RUN FIRST
			(function () {
				try {
					const savedTheme = localStorage.getItem("blog-theme");
					const theme = savedTheme || "light";
					document.documentElement.setAttribute("data-theme", theme);
					document.documentElement.dataset.theme = theme;
					console.log(
						"[THEME INIT] Applied theme:",
						theme,
						"from localStorage:",
						savedTheme,
					);
				} catch (e) {
					console.error("Theme init error:", e);
					// Fallback to light theme
					document.documentElement.setAttribute(
						"data-theme",
						"light",
					);
				}
			})();
		</script>

		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />
	</head>
	<body style="margin: 0; min-height: 100vh; background: var(--app-bg);">
		<slot />
	</body>
</html>
