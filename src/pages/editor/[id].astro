---
import EditorLayout from "../../layouts/EditorLayout.astro";
import StandalonePostEditor from "../../components/StandalonePostEditor";
import { supabase } from "../../lib/supabase";

const { id } = Astro.params;

if (!id) {
    return Astro.redirect("/editor/new");
}

// Fetch post data for initial render (SSR)
const { data: post, error } = await supabase
    .from("notes")
    .select("*")
    .eq("id", id)
    .single();
const { data: topics } = await supabase
    .from("topics")
    .select("*")
    .order("order", { ascending: true });

if (error || !post) {
    return Astro.redirect("/");
}
---

<EditorLayout title={`Editing: ${post.title}`}>
    <StandalonePostEditor
        client:only="react"
        postId={id}
        initialData={post}
        availableTopics={topics || []}
    />
</EditorLayout>
